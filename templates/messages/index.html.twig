{% extends 'base-front.html.twig' %}

{% block title %}Hello MessagesController!{% endblock %}

{% block body %}

    <div class="page-heading normal-space">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Discussion</h6>
                    <h2>{{ OtherUser.userName }}</h2>
                    <div >
                        <div >
                            <div >
                                <img src="{{ qr_code_url(myurl) }}" alt="myqr" style=" height: 100px;width: 100px" >
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="item-details-page">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <form id="contact" action="" method="post">

                        {% for message in messages %}
                            <div>
                                {% if message.senderId.id == userId %}

                                    You:
                                    <div class="btn btn-primary">
                                        {{ message.message }}
                                    </div>
                                    <a href="{{ path('message_delete', {"id": message.id,"idPath":message.recipientId.id}) }}"><i>x</i></a>
                                    <br>
                                {% else %}
                                    <div style="float: right">
                                        {{ message.senderId.userName }}
                                        <div class="btn btn-info" >
                                            <div class="col-lg-9">
                                                <fieldset>
                                            {{ message.message }}
                                                </fieldset>

                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                {% endif %}

                            </div>
                        {% endfor %}

                        {{ form_start(form) }}


                        {{ form_end(form) }}
                    </form>
                </div>



            </div>
        </div>
    </div>

{% endblock %}