{% extends 'base-front.html.twig' %}

{% block title %}Hello ReclamationController!{% endblock %}

{% block body %}

    <div class="page-heading normal-space">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Envoyer une reclamation</h6>
                    <h2>Reclamation</h2>

                </div>
            </div>
        </div>
    </div>
    <div class="item-details-page">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

                            <div class="col-lg-6">
                                <fieldset>
                                    <label for="price">Objet :</label>
                                    {{ form_widget (form.objet) }}
                                    {{ form_errors(form.objet) }}
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label for="royalities">Contenu :</label>
                                    <br>
                                    {{ form_widget (form.contenu) }}
                                    {{ form_errors(form.contenu) }}
                                </fieldset>
                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="orange-button">Envoyer</button>
                                </fieldset>
                            </div>

                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


{% endblock %}
